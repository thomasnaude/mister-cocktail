<h2><%= @cocktail.name %></h2>
<div>
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
</div>
<div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description + " of " + dose.ingredient.name %> | <%= link_to "Delete", cocktail_dose_path(dose.cocktail_id, dose.id), method: :delete %></li>
    <% end %>
  </ul>
</div>
